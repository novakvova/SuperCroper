@model CroperJsExampleGood.Models.UserChangeImageViewModel

@{
    ViewBag.Title = "ChangeImage";
}

<h2>ChangeImage</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    @Html.TextAreaFor(x => x.Image, new { @id = Html.NameFor(x => x.Image), @class = "hidden" })
    <div class="form-horizontal">
        <h4>UserChangeImageViewModel</h4>
        <hr />
        @*background image*@
        <div class="form-group col-md-12">
            <div class="background-image-preview-wrapper empty-image pointer">
            </div>
        </div>

        <div class="col-md-12">
            <input type="file" class="filestyle inputImage" data-icon="false">
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Зберегти" class="btn btn-default" />
            </div>
        </div>
    </div>
}

